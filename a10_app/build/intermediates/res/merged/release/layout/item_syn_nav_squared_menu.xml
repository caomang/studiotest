<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/main_menu_item_width"
    android:layout_height="@dimen/main_menu_item_height"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/iv_syn_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter" /> <!-- menu_squared_img_width   menu_squared_img_height -->

        <TextView
            android:id="@+id/tv_syn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="3dp"
            android:text="公文"
            android:textColor="@color/c_type_squared_userinfo"
            android:textSize="14sp" />
    </LinearLayout>
    <!-- 金陵2.0使用 android:layout_gravity="center_horizontal|bottom" -->
    <!-- 普通2.0使用  android:layout_gravity="left|bottom" -->

    <TextView
        android:id="@+id/tv_msg_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/ic_num_loading"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" /><!-- android:background="@drawable/frame_bg" -->
        
            <TextView
        android:id="@+id/tv_msg_count1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/ic_num_loading"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" /><!-- android:background="@drawable/frame_bg" -->

</FrameLayout>