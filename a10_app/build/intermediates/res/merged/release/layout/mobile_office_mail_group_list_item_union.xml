<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal" 
    android:background="@drawable/layout_metting_selected"
    android:gravity="center_vertical"
    android:clickable="false"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    >
    <ImageView 
	    android:id="@+id/bt_mail_conn_people"
	    android:layout_width="25dp"
    	android:layout_height="25dp"
    	android:layout_marginLeft="10dp"
    	android:background="@drawable/bt_mail_conn_add_selected"
	    />
    
	<TextView 
	    android:text="类别"
	    android:textSize="18sp"
	    android:textColor="#000000"
	    android:layout_marginLeft="10dp"
	    android:id="@+id/tv_con_name"
	    android:layout_width="0dp"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
	    />
	
	<ImageView 
	    android:id="@+id/bt_mail_conn_group"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/bt_mail_conn_group_selected"
    	android:clickable="true"
    	android:layout_marginRight="20dp"
	    />
	
</LinearLayout>