<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_up_container_psw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_bg1">

    <LinearLayout
        android:id="@+id/linearLayout1_psw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_top_log_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/login_layout"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:src="@drawable/ic_sp_logo"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="设置离线登录密码"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_layout_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_btn_bg"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/hebei_layout_login_edt_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dip"
                    android:src="@drawable/admin_user"
                    android:textColor="@color/darker_label" />

                <TextView
                    android:id="@+id/et_username_login_psw"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="用户名"
                    android:padding="5dip"
                    android:singleLine="true"
                    android:textColor="#585151"
                    android:textColorHint="@color/et_hint_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@drawable/hebei_layout_login_edt_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dip"
                    android:src="@drawable/admin_password"
                    android:textColor="@color/darker_label" />

                <EditText
                    android:id="@+id/et_password_login_psw"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请设置离线登录密码"
                    android:maxLength="20"
                    android:minWidth="50dip"
                    android:padding="6dip"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/darker_label"
                    android:textColorHint="@color/et_hint_color"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/password_confirmaction_linearLayout_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@drawable/hebei_layout_login_edt_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dip"
                    android:src="@drawable/admin_password"
                    android:textColor="@color/darker_label" />

                <EditText
                    android:id="@+id/et_password_login_confirmation_psw"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="确认离线密码"
                    android:maxLength="20"
                    android:minWidth="50dip"
                    android:padding="6dip"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/darker_label"
                    android:textColorHint="@color/et_hint_color"
                    android:textSize="16sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_fetch_val_code_psw"
                    android:layout_width="0dip"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bt_union_office_msg_save"
                    android:text="确  定"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/bt_login_confirm_psw"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_height="40dip"
                    android:background="@drawable/bt_union_office_msg_save"
                    android:text="重新设置"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_val_code_send_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="#3977c1"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>