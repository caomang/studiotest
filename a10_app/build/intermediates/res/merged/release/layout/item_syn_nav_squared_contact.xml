<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_syn_icon"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lxr_icon"
            android:scaleType="fitCenter" /> <!-- menu_squared_img_width   menu_squared_img_height -->

        <TextView
            android:id="@+id/tv_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="-25dp"
            android:text="13260233099"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="-50dp"
            android:text="公文"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <!-- 金陵2.0使用 android:layout_gravity="center_horizontal|bottom" -->
    <!-- 普通2.0使用  android:layout_gravity="left|bottom" -->

    <TextView
        android:id="@+id/tv_msg_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/ic_num_loading"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone" /> <!-- android:background="@drawable/frame_bg" -->

    <TextView
        android:id="@+id/tv_msg_count1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/ic_num_loading"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone" /> <!-- android:background="@drawable/frame_bg" -->

</FrameLayout>