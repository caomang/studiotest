        android:layout_height="wrap_content"
        android:background="#C3C1C6"
        android:orientation="horizontal"
        android:padding="7dp" >

        <TextView
            android:id="@+id/tv_title_common_download"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:background="@drawable/tabs_background"
            android:gravity="center"
            android:text="普通\n下载"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <!-- android:drawableLeft="@drawable/tabs_common_download" -->

        <TextView
            android:id="@+id/tv_title_difference_download"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:background="@drawable/tabs_background"
            android:gravity="center"
            android:text="重复\n下载"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <!-- android:drawableLeft="@drawable/tabs_defference_download" -->

        <TextView
