<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_left_menu_bg"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mobile_title_height"
        android:background="@drawable/ic_left_menu_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >
        <TextView
            style="@style/style_left_menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/ic_swich_menu"
            android:text="@string/tv_left_menu_title" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_menus"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>