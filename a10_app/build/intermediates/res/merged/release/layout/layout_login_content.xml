<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_up_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_bg1">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/bt_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/hebei_login_setting_btn" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_top_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/login_layout"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:src="@drawable/logo" />

            <!--             <TextView -->
            <!--                 android:layout_width="wrap_content" -->
            <!--                 android:layout_height="match_parent" -->
            <!--                 android:gravity="center_vertical" -->
            <!--                 android:text="迪普移动巡检系统" -->
            <!--                 android:textColor="@color/black" -->
            <!--                 android:textSize="20sp" /> -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_btn_bg"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/hebei_layout_login_edt_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dip"
                    android:src="@drawable/admin_user"
                    android:textColor="@color/darker_label" />

                <TextView
                    android:id="@+id/et_username_login"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="用户名"
                    android:padding="5dip"
                    android:singleLine="true"
                    android:textColor="#585151"
                    android:textColorHint="@color/et_hint_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@drawable/hebei_layout_login_edt_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dip"
                    android:src="@drawable/admin_password"
                    android:textColor="@color/darker_label" />

                <EditText
                    android:id="@+id/et_password_login"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="密码"
                    android:maxLength="20"
                    android:minWidth="50dip"
                    android:padding="6dip"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/darker_label"
                    android:textColorHint="@color/et_hint_color"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cb_remind_password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/selector_remeber"
                    android:button="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/password_confirmaction_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@drawable/hebei_layout_login_edt_bg"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dip"
                    android:src="@drawable/admin_password"
                    android:textColor="@color/darker_label" />

                <EditText
                    android:id="@+id/et_password_login_confirmation"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="确认密码"
                    android:maxLength="20"
                    android:minWidth="50dip"
                    android:padding="6dip"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/darker_label"
                    android:textColorHint="@color/et_hint_color"
                    android:textSize="16sp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dip"
                android:orientation="horizontal"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/cb_auto_logon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_cb_auto_logon"
                    android:drawablePadding="10dip"
                    android:paddingRight="5dip"
                    android:text="自动登录"
                    android:textColor="@color/darker_label" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_fetch_val_code"
                    android:layout_width="0dip"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:background="@drawable/hebei_login_yanz_btn"
                    android:gravity="center"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/bt_login_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="@drawable/bt_union_office_msg_save"
                    android:text="登 录"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_val_code_send_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="#3977c1"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>