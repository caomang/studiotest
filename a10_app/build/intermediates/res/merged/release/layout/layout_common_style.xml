<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_common_download"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginRight="3dp"
        android:layout_weight="1.5"
        android:background="@drawable/tabs_background_unselect"
        android:drawableLeft="@drawable/contacts_download"
        android:gravity="center"
        android:padding="2dp"
        android:text="普通下载"
        android:textColor="#00A0E9"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_difference_download"
        android:layout_width="0dp"
          android:layout_weight="1.5"
        android:layout_height="30dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/tabs_background_unselect"
        android:drawableLeft="@drawable/contacts_difenerce_download"
        android:gravity="center"
        android:text="差别下载"
        android:textColor="#00A0E9"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_upload"
        android:layout_width="0dp"
          android:layout_weight="1"
        android:layout_height="30dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/tabs_background_unselect"
        android:drawableLeft="@drawable/contacts_upload"
        android:gravity="center"
        android:text="上传"
        android:textColor="#00A0E9"
        android:textSize="15dp" />

</LinearLayout>