<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_list_item_second"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_time_schedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="14:00"
            android:paddingLeft="15dp"
            android:textColor="#7B7B7B"
            android:textSize="16sp" >
        </TextView>

        <TextView
            android:id="@+id/tv_plan_schedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:singleLine="true"
            android:text="星期一"
            android:paddingRight="5dp"
            android:textColor="#7B7B7B"
            android:textSize="16sp" >
        </TextView>

        <ImageView
            android:id="@+id/tv_image_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:scaleType="center"
            android:src="@drawable/lv_sub_indicator_white"
            android:visibility="visible" >
        </ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/rb_grade_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="12312321"
        android:visibility="gone" >
    </TextView> <!-- android:numStars="6" -->

</LinearLayout>