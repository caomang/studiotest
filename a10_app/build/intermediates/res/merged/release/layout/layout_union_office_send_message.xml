            <!-- 信息类型 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:text="信息类型"
                android:textColor="@color/union_label"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/b_gray"
                android:orientation="horizontal"
                android:padding="5dp" >

                <EditText
                    android:id="@+id/et_msg_type"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="8"
                    android:background="@color/b_gray"
                    android:editable="false" />

                <Button
                    android:id="@+id/btn_chose_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_matters_router_option" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:text="信息优先级"
                android:textColor="@color/union_label"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/b_gray"
                android:orientation="horizontal"
                android:padding="5dp" >

                <EditText
                    android:id="@+id/et_msg_priority"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="8"
                    android:background="@color/b_gray"
                    android:editable="false" />

                <Button
                    android:id="@+id/btn_chose_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_matters_router_option" />
            </LinearLayout>

            <!-- 信息标题 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="信息标题"
                android:textColor="@color/union_label"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/b_gray"
                android:orientation="horizontal"
                android:padding="5dp" >

                <EditText
                    android:id="@+id/et_msg_title"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/b_gray" />
            </LinearLayout>
            <!-- content -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:text="信息内容"
                android:textColor="@color/union_label"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/b_gray"
                android:orientation="horizontal"
                android:padding="3dp" >

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:gravity="top|left"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/b_gray" />
            </LinearLayout>

            <!-- 截止日期 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="3dp"
                    android:text="截止日期"
                    android:textColor="@color/union_label"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/spnr_chart_filter_date"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_spinner_filter"
                    android:gravity="center"
                    android:paddingLeft="10dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/b_gray"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="3dp"
                    android:text="请选择发送方式"
                    android:textColor="@color/union_label"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/cb_islync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Lync方式"
                    android:textSize="12sp"
                    android:textColor="@color/union_label" />

                <CheckBox
                    android:id="@+id/cb_issms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="短信方式"
                    android:textSize="12sp"
                    android:textColor="@color/union_label" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp" >

                <Button
                    android:id="@+id/btn_msg_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bt_union_office_msg_save"
                    android:text="保    存"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>