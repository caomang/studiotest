<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/ll_showshebeixinxi"
    android:visibility="gone"
    >

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@drawable/shape_matters_router_child_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_biaoju"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="表具"
                android:textColor="#3773c0"
                android:textSize="16sp" />

            <View
                android:layout_width="2px"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_matters_router_child_divider" />

            <TextView
                android:id="@+id/tv_liguan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="立管阀门"
                android:textColor="#3773c0"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@drawable/shape_matters_router_child_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_zaoju"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="灶具"
                android:textColor="#3773c0"
                android:textSize="16sp" />

            <View
                android:layout_width="2px"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_matters_router_child_divider" />

            <TextView
                android:id="@+id/tv_lianjieguan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="连接管"
                android:textColor="#3773c0"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@drawable/shape_matters_router_child_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_cainuanlu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="采暖炉"
                android:textColor="#3773c0"
                android:textSize="16sp" />

            <View
                android:layout_width="2px"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_matters_router_child_divider" />

            <TextView
                android:id="@+id/tv_reshuiqi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="热水器"
                android:textColor="#3773c0"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@drawable/shape_matters_router_child_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_baojingqi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="报警器"
                android:textColor="#3773c0"
                android:textSize="16sp" />
            
            <View
                android:layout_width="2px"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_matters_router_child_divider" />
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="#3773c0"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@drawable/shape_matters_router_child_divider" />
    </LinearLayout>

</LinearLayout>