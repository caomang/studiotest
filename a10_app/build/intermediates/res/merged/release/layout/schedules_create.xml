<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_schedule_top_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/schedules_type_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="新建日程"
            android:textColor="@color/schedules_operate_btn_textcolor"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/cb_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:button="@null"
            android:padding="5dp"
            android:text=" 返回"
            android:textColor="#3773c0"
            android:textSize="18sp" />
    </RelativeLayout>

    <WebView
        android:id="@+id/webview_create_schedule"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" />

</LinearLayout>