            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_indicator_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="刷新信息"
            android:textColor="#666666"
            android:textSize="17sp" />

        <!-- <Button -->
