<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- <FrameLayout -->
    <!-- android:id="@+id/fl_time_bar" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:background="@color/white" > -->

    <RelativeLayout
        android:id="@+id/ll_time_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:background="@color/b_gray"
        android:visibility="gone" >

        <Spinner
            android:id="@+id/sp_integrate_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <!-- </FrameLayout> -->

    <cn.sbx.deeper.moblie.view.MyListView
        android:id="@+id/ml_approve_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#82806E"
        android:divider="@color/littleGray"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp" />

</LinearLayout>