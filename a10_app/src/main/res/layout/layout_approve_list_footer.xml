<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <Button 
        style="@style/style_approve_tab_text"
        android:padding="10dp"
        android:text="@string/tv_list_footer_load_more"
        android:id="@+id/bt_load_more"
        android:layout_width="match_parent"
	    android:layout_height="@dimen/approve_list_footer_height"
	    android:background="@drawable/layout_metting_selected"
	    android:visibility="gone"
        /> 
    <RelativeLayout
        android:id="@+id/ll_list_footer_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:indeterminateDrawable="@drawable/my_progress_indeterminate" />

        <TextView
            style="@style/style_approve_tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/tv_approve_list_load_more" />
    </RelativeLayout>

</LinearLayout>