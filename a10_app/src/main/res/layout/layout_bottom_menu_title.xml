<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bottom_title"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/top_bg_new"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/bt_left"
        style="@style/style_approve_title_next"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:background="@drawable/caozuo1"
        android:text="返回"
         />

    <TextView
        android:id="@+id/tv_title"
        style="@style/style_approve_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="60dp"
        android:ellipsize="end"
        android:singleLine="true" />

    <Button
        android:id="@+id/btn_save"
        style="@style/style_approve_title_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/caozuo2"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
       />

    <Button
        android:id="@+id/btn_next"
        style="@style/style_approve_title_next"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/caozuo2"
       
        />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/ic_left_more"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/caozuo2"
        android:visibility="gone" />

    <Button
        android:id="@+id/top_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/top_refresh"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_text_size_inc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_btn_text_size_decs" />

        <Button
            android:id="@+id/btn_text_size_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_btn_text_size_incs" />
    </LinearLayout>

</RelativeLayout>