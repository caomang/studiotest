<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_document_background"
    android:orientation="vertical" >

    <include layout="@layout/vedio_title" />
    <ListView 
        android:id="@+id/vedio_search_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        ></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_document_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <View
            android:id="@+id/vv_divider1"
            android:layout_width="10px"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />

        <LinearLayout
            android:id="@+id/ll_document_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <View
            android:id="@+id/vv_divider2"
            android:layout_width="10px"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />

        <LinearLayout
            android:id="@+id/ll_document_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </LinearLayout>

</LinearLayout>