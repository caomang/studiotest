<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@drawable/shape_matters_router_child_divider" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#f5f5f5"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="2.8"
            android:background="#f5f5f5"
            android:padding="5dp"
            android:text="客户名称"
            android:textColor="#3773c0"
            android:textSize="16sp" />

        <View
            android:layout_width="2px"
            android:layout_height="fill_parent"
            android:background="@drawable/shape_matters_router_child_divider" />

        <RelativeLayout
            android:id="@+id/user_view_anjian"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="7.2"
            android:background="#f5f5f5"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/user_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_1"
                android:layout_width="2px"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/user_name1"
                android:background="@drawable/shape_matters_router_child_divider" />

            <TextView
                android:id="@+id/user_no"
                android:layout_toRightOf="@id/view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                android:text="编号"
                android:textColor="@color/black"
                android:textSize="16sp"
                 />

            <ImageView
                android:id="@+id/user_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@drawable/shape_matters_router_child_divider" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#f5f5f5"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="2.8"
            android:background="#f5f5f5"
            android:padding="5dp"
            android:text="地址"
            android:textColor="#3773c0"
            android:textSize="16sp" />

        <View
            android:layout_width="2px"
            android:layout_height="fill_parent"
            android:background="@drawable/shape_matters_router_child_divider" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="7.2"
            android:background="#f5f5f5"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="地址,地址地址地址地址"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/two_line"
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@drawable/shape_matters_router_child_divider" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#f5f5f5"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="2.8"
            android:background="#f5f5f5"
            android:padding="5dp"
            android:text="上次安检"
            android:textColor="#3773c0"
            android:textSize="16sp" />

        <View
            android:layout_width="2px"
            android:layout_height="fill_parent"
            android:background="@drawable/shape_matters_router_child_divider" />

        <RelativeLayout
            android:id="@+id/user_view"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="7.2"
            android:background="#f5f5f5"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/anjian_history_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="安检时间"
                android:textColor="@color/Gray"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tv_oldissafe_anjian"
                android:textColor="@color/black"
                android:textSize="16sp" />
<!--                 android:text="隐患 :" -->

            <TextView
                android:id="@+id/tv_oldissafe_anjian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/user_iv"
                android:textColor="@color/blue"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/user_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>